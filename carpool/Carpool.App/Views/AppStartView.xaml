<Window
    x:Class="Carpool.App.Views.AppStartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Carpool.App.Views"
    xmlns:viewModels="clr-namespace:Carpool.App.ViewModels"

        mc:Ignorable="d"
        Title="UserProfileWindow" Height="450" Width="933"
        d:DataContext="{d:DesignInstance viewModels:AppStartViewModel}">
    <Grid
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" RenderTransformOrigin="0.47,0.483" HorizontalAlignment="Center" Width="933">
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="100" Margin="343,52,0,0" VerticalAlignment="Top" Width="100" Source="X:\Školní projekty\ITW\proj_2\mpech.cz\img\dkon.png"/>
        <Label Content="Můj Profil&#xD;&#xA;" HorizontalAlignment="Left" Margin="317,8,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Poppins" Height="39" Width="95"/>
        <TextBox HorizontalAlignment="Left" Margin="315,112,0,0" TextWrapping="Wrap" Text="Uživatel" VerticalAlignment="Top" Width="48" Height="18"/>
        <Image HorizontalAlignment="Left" Height="18" Margin="269,168,0,0" VerticalAlignment="Top" Width="18" Source="X:\Školní projekty\ICS\edit.png" Grid.Column="1"/>
        <Button Content="Přihlášené spolujízdy" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="1,1,1,1" BorderBrush="Black" Background="White" Width="138" Margin="468,16,0,0" Height="22"/>
        <Button Content="Vytvořené spolujízdy" HorizontalAlignment="Left" VerticalAlignment="Top" BorderThickness="1,1,1,1" BorderBrush="Black" Background="White" Width="138" Margin="305,75,0,0" Height="22"/>
        <Label Content="Moje vozy&#xA;" HorizontalAlignment="Left" Margin="349,102,0,0" VerticalAlignment="Top" FontSize="15
               " FontFamily="Poppins" Height="38" Width="78"/>
        <Rectangle HorizontalAlignment="Left" Height="120" Margin="296,189,0,0" Stroke="Black" VerticalAlignment="Top" Width="138"/>


        <TabControl SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}" Margin="0,0,10,0" SelectionChanged="TabControl_SelectionChanged">
            <TabItem x:Name="Login" Header="LOGIN" Height="21" VerticalAlignment="Bottom">
                <views:UserListView x:Name="UserList"
                                    Grid.Row="0"
                                    DataContext="{Binding UserListViewModel}" Margin="68,0,67,0" Height="316" />
            </TabItem>
            <TabItem x:Name="Dashboard" Header="DASHBOARD">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="445*"/>
                        <ColumnDefinition Width="472*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Můj profil" Margin="0,31,134,285" Width="287" FontSize="25" FontFamily="Calibri"/>
                    <views:UserDetailView Grid.Column="0" HorizontalAlignment="Left" Width="395" Margin="22,78,0,23"
                                          DataContext="{Binding SelectedUserDetailViewModel}" Loaded="UserDetailView_Loaded"/>
                    <views:RideListView Margin="14,31,10,240" Grid.Column="1"
                                        DataContext="{Binding RideListViewModel}"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="FindRide" Header="HLEDAT JÍZDU">

            </TabItem>


            <TabItem x:Name="Car" Header="AUTO">
                <TabControl x:Name="CarDetail"
                            ItemsSource="{Binding CarDetailViewModels}"
                            SelectedItem="{Binding SelectedCarDetailViewModel, Mode=TwoWay}" Margin="10,24,0,0" HorizontalAlignment="Left" Width="281" Height="383" VerticalAlignment="Top" >
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Model.Manufacturer}" Margin="5"/>
                                <Button Content="X" Command="{Binding DataContext.CloseCarDetailTabCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type TabControl}}}"
                                        CommandParameter="{Binding}"
                                        Width="20" Height="20" FontWeight="Bold" FontSize="12"
                                        Foreground="White" Padding="0"/>
                            </StackPanel>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <views:CarDetailView HorizontalAlignment="Right" />
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>

            </TabItem>


            <TabItem x:Name="ManageRides" Header="SPRAVOVAT JÍZDU">

            </TabItem>
        </TabControl>






    </Grid>
</Window>

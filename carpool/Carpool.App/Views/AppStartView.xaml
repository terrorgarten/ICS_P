<Window
    x:Class="Carpool.App.Views.AppStartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Carpool.App.Views"
    xmlns:viewModels="clr-namespace:Carpool.App.ViewModels"

        mc:Ignorable="d"
        Title="UserProfileWindow" Height="450" Width="933"
        d:DataContext="{d:DesignInstance viewModels:AppStartViewModel}">

    <Grid 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" RenderTransformOrigin="0.47,0.483" HorizontalAlignment="Center" Width="933">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TabControl Grid.Column="0" SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}" Margin="0,0,-40,0" SelectionChanged="TabControl_SelectionChanged" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="933">
            <TabItem x:Name="Login" Header="LOGIN" Height="21" VerticalAlignment="Bottom">
                <views:UserListView x:Name="UserList"
                                    Grid.Row="0"
                                    DataContext="{Binding UserListViewModel}" Margin="46,0,32,0" Height="316" />
            </TabItem>
            <TabItem x:Name="Dashboard" Header="DASHBOARD">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="337*"/>
                        <ColumnDefinition Width="45*"/>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="53*"/>
                        <ColumnDefinition Width="477*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Můj profil" Margin="0,31,21,285" Width="287" FontSize="25" FontFamily="Calibri"/>
                    <views:UserDetailView Grid.Column="0" HorizontalAlignment="Left" Width="873" Margin="24,76,0,25"
                                          DataContext="{Binding SelectedUserDetailViewModel}" Loaded="UserDetailView_Loaded" Grid.ColumnSpan="5"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="FindRide" Header="HLEDAT JÍZDU">

            </TabItem>


            <TabItem x:Name="Car" Header="AUTO">
                <views:CarListView 
                    DataContext="{Binding CarListViewModel}" Height="409" Margin="0,0,11,0"></views:CarListView>
            </TabItem>


            <TabItem x:Name="ManageRides" Header="SPRAVOVAT JÍZDU">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="34*"/>
                        <ColumnDefinition Width="275*"/>
                    </Grid.ColumnDefinitions>
                    <views:RideListView 
                        DataContext="{Binding RideDetailViewModel}" Height="399" Margin="176,3,1,3" Grid.Column="1"></views:RideListView>
                    <views:RideListView 
                        Grid.Column="0"
                        DataContext="{Binding RideListViewModel}" Height="409" Margin="0,0,654,-4" Grid.ColumnSpan="2" Loaded="RideListView_Loaded"></views:RideListView>
                </Grid>
            </TabItem>
        </TabControl>






    </Grid>
</Window>

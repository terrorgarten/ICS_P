<local:UserControlBase x:Class="Carpool.App.Views.RideSearchView"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                       xmlns:local="clr-namespace:Carpool.App.Views"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:texts="clr-namespace:Carpool.App.Resources.Texts"
                       xmlns:controls="clr-namespace:Carpool.App.Controls"
                       xmlns:viewModels="clr-namespace:Carpool.App.ViewModels"
                       d:DesignHeight="450"
                       d:DesignWidth="800"
                       mc:Ignorable="d"
                       Background="{StaticResource DefaultComponentBackgroundBrush}"
                       d:DataContext="{d:DesignInstance viewModels:RideSearchViewModel}">
    <Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Text="{Binding StartCity, Mode=TwoWay}" Margin="215,80,346,0" Grid.Row="1" VerticalAlignment="Top" Height="26"/>
        <TextBox Text="{Binding EndCity, Mode=TwoWay}" Margin="215,130,346,0" Grid.Row="1" VerticalAlignment="Top" Height="26"/>
        <TextBox Text="{Binding StartFrom, Mode=TwoWay}" Margin="215,182,346,0" Grid.Row="1" VerticalAlignment="Top" Height="26"/>
        <TextBox Text="{Binding StartTo, Mode=TwoWay}" Margin="215,237,346,0" Grid.Row="1" VerticalAlignment="Top" Height="26"/>
        <ListBox x:Name="RideSearchBox" Grid.Row="1"  Grid.Column="0"  ItemsSource="{Binding FoundRides}" Margin="480,80,10,30" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding RideSelectedCommand}"
                                           CommandParameter="{Binding ElementName=RideSearchBox, Path=SelectedItem}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Content="{Binding Start}" ContentStringFormat="Z: {0}"  />
                        <Label Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding End}" ContentStringFormat="Do: {0}" />
                        <Label Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Content="{Binding BeginTime}" />

                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="FindRides" Content="Vyhledat" HorizontalAlignment="Left" Margin="215,298,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="239" Command="{Binding FilterRides}"/>
        <Button x:Name="RegisterFroRide" Content="Pridat se do jizdy" HorizontalAlignment="Left" Margin="215,356,0,0" Grid.Row="1" VerticalAlignment="Top" Width="239"  Command="{Binding RegisterForRideCommand}" />

    </Grid>
</local:UserControlBase>
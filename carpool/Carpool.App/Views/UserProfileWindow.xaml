        <Label Content="Moje vozy&#xA;" HorizontalAlignment="Center" Margin="0,257,0,0" VerticalAlignment="Top" FontSize="15
               " FontFamily="Poppins" Height="39"/>
        <Rectangle HorizontalAlignment="Center" Height="120" Margin="0,287,0,0" Stroke="Black" VerticalAlignment="Top" Width="138"/>

        <ListView ItemsSource ="{Binding Cars}" HorizontalAlignment="Center" Width="138" Margin="0,287,0,27">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding CarType}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
                 
        </ListView>
    </Grid>
</Window>
